<h3 class = "h1title sinki">パスワード再設定</h3>

<div class="row">
    <div class="forms">
        <div class="form-group">
            <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
                <%= render 'shared/error_messages' %>
            
                <%= hidden_field_tag :email, @user.email %>
            
                <%= f.label :パスワード, class: 'form-label' %>
                <%= f.password_field :password, class: 'form-control input-lg' %>
                <p>※ 半角英数６文字以上</p>
            
                <%= f.label :password_confirmation, "パスワード（確認）", class: 'form-label' %>
                <%= f.password_field :password_confirmation, class: 'form-control input-lg' %>
                <p>※ ご確認のため、もう一度ご入力ください。</p>
                
                <%= f.submit "変更を保存", class: "cp_btn" %>
            <% end %>
        </div>
    </div>
</div>