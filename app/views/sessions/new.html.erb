<h3 class = "h1title sinki">ログイン</h3>

<div class="row">
    <div class="forms">
        <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-group">
                <%= f.label :メールアドレス, class: 'form-label' %>
                <%= f.email_field :email, class: 'form-control input-lg' %>
                <p>※ ご登録頂いたメールアドレス</p>
            </div>
    
            <div class="form-group">
                <%= f.label :パスワード, class: 'form-label' %>
                <spam>（<%= link_to "パスワードを忘れた場合", new_password_reset_path, class: 'forget' %>）</span>
                <%= f.password_field :password, class: 'form-control input-lg' %>
                <p>※ ご登録頂いたパスワード</p>
            </div>
            
            <div class="form-group checkchan">
                <%= f.label :remember_me, class: "checkbox-inline" do %>
                    <%= f.check_box :remember_me, class: "option-input05" %>
                    <span>ログイン情報を保持する</span>
                <% end %>
            </div>
            
            <div class="form-group">
                <%= f.submit "ログイン", class: "cp_btn" %>
            </div>
        
        <% end %>
        <p class = "tourokusuru"><%= link_to "新規登録はこちら", signup_path, class: 'madanokata' %></p>
    </div>


</div>